          <Menu mnemonicParsing="false" text="Fichier">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#quitterApp" text="Quitter" />
                  <MenuItem mnemonicParsing="false" onAction="#exportAsPng" text="Exporter en png" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="Theme">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#switchThemeMode" text="Clair" />
                  <MenuItem mnemonicParsing="false" onAction="#switchThemeMode" text="Sombre" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Aide">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#visiterAide" text="Visiter la page d'aide" />
            </items>
          </Menu>
        </menus>
      </MenuBar>

    </Pane>
</SplitPane>
