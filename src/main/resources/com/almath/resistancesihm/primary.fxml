<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<SplitPane orientation="VERTICAL" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.almath.resistancesihm.controllers.PrimaryController">
    <Pane id="MainPane">
        <Button id="CalculerBtn" layoutX="318.0" layoutY="314.0" mnemonicParsing="false" onAction="#runCalculer" prefHeight="25.0" prefWidth="163.0" text="Calculer" />
      <ImageView fitHeight="248.0" fitWidth="442.0" layoutX="189.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../assets/resistance.png" />
         </image>
      </ImageView>
        <HBox id="ColorPickerContainer" alignment="CENTER" layoutY="242.0" nodeOrientation="LEFT_TO_RIGHT">
            <ComboBox id="FirstColorPicker" fx:id="comboxFirstColor" onAction="#onChangeCombox" />
            <ComboBox id="SecondColorPicker" fx:id="comboxSecondColor" onAction="#onChangeCombox" />
            <ComboBox id="ThirdColorPicker" fx:id="comboxThirdColor" onAction="#onChangeCombox" />
            <ComboBox id="MultiplierPicker" fx:id="comboxMultiplier" onAction="#onChangeCombox" />
            <ComboBox id="TolerancePicker" fx:id="comboxTolerance" onAction="#onChangeCombox" />
            <ComboBox fx:id="comboxTemp" onAction="#onChangeCombox" />
        </HBox>
        <HBox id="ResultContainer" alignment="CENTER" layoutX="267.0" layoutY="446.0">
            <ComboBox id="ResultComboPicker" prefHeight="25.0" prefWidth="110.0" promptText="Ohm Î©" />
            <TextField id="ResultTextField" fx:id="labelCalculer" editable="false" text="0.00" />
        </HBox>
      <Label id="lblNomResistance" alignment="CENTER" contentDisplay="CENTER" layoutX="341.0" layoutY="195.0" prefHeight="25.0" prefWidth="125.0" text="Label" textAlignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Pane layoutX="336.0" layoutY="33.0" prefHeight="92.0" prefWidth="148.0">
         <children>
              <fx:include fx:id="resistancePreview" snapToPixel="false" source="resistancePreview.fxml" />
         </children>
      </Pane>
    </Pane>
</SplitPane>
